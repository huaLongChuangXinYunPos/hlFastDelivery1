<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:ptr="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.QueryFragment"
             android:orientation="vertical"
    >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/salesheet_list_view_title"
        />

    <!-- TODO: Update blank fragment layout -->
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/fragment_pull_to_refresh"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="@color/lowGray"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"

        ptr:ptrAnimationStyle="rotate"
        ptr:ptrHeaderBackground = "@drawable/ptrf_down_header_bg"
        ptr:ptrDrawable="@mipmap/ic_launcher"
        ptr:ptrHeaderTextColor ="@color/red"
        />

</LinearLayout>
